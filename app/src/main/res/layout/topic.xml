    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topic_title"
            android:layout_centerHorizontal="true"
            android:text="pupa vs lupa"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_bold"
    />



    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/topic_title"
            android:id="@+id/topic"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
        >

            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/topic_left"
                    android:layout_weight="0.5"
                    android:layout_gravity="start"
                    android:paddingLeft="25dp"
                    android:id="@+id/vote_left"
            />

            <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/topic_right"
                    android:layout_weight="0.5"
                    android:layout_gravity="end"
                    android:paddingRight="25dp"
                    android:id="@+id/vote_right"
            />
        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
        >

            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:id="@+id/image_left"
                    android:src="@drawable/maxresdefault"
                    android:alpha=".30"
                    android:layout_alignParentLeft="true"
            />

            <ImageView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/maxresdefault"
                    android:id="@+id/image_right"
                    android:alpha=".30"
                    android:layout_alignParentRight="true"
            />
        </RelativeLayout>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/centerr"
                android:layout_centerHorizontal="true"
                android:id="@+id/center"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pupa"
                android:textColor="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="15sp"
                android:id="@+id/topic_left"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35%"
                android:textColor="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:paddingRight="80dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="15sp"
                android:id="@+id/proc_left"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lupa"
                android:textColor="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="15sp"
                android:id="@+id/topic_right"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65%"
                android:textColor="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:paddingLeft="80dp"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="15sp"
                android:id="@+id/proc_right"
        />

        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/active_like"
                android:visibility="gone"
                android:id="@+id/left_active"
        />

        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/active_like"
                android:visibility="gone"
                android:id="@+id/right_active"
        />

    </RelativeLayout>
</RelativeLayout>