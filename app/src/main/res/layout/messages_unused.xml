<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MessagesActivity"
        android:orientation="vertical"
        android:background="@drawable/holywar_bg">

    <Button
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/white_button"
            android:textSize="15sp"
            android:hint="got butthurt, quit now"
            android:textColorHint="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/butthurt"
    />

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msg_recycler"
            android:layout_above="@id/input"
    />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/input"
    >

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="(─‿‿─)"
                android:paddingLeft="5dp"
                android:id="@+id/msg_inp"
                android:background="@drawable/text_back"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:paddingRight="10dp"
                android:drawableRight="@drawable/send"
                android:drawableLeft="@drawable/plus"
                android:drawablePadding="10dp"
        />

        <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/send"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="onButtonClick"
                android:background="@color/absolute"
        />

    </RelativeLayout>
</RelativeLayout>